#main_screen
    width: 100%
    padding 0 0 33px
    background-image url(../img/main_bg.jpg)
    background-position: center top
    background-repeat no-repeat
    background-size: cover
    overflow hidden
    .container
        position relative
        z-index 9
#header
	padding: 27px 0 10px
	overflow hidden
	z-index: 9
	position relative
#logo
	float: left
.contacts
	float: right
	text-align: right
	padding-right: 15px;
	.fa
		color: #fe8133
		font-size: 20px
		margin: 0 15px 0  40px
		&.fa-phone
			margin-left: 0
	.fa+span
		font-size: 18px;
		font-family: "OpenSansBold", sans-serif;
		color: rgba(#fff)
		line-height: 26px
		text-align: right;
		&:hover
			text-decoration underline
.date
    margin 28px auto 32px
    width: 461px
    height 118px
    background-image url(../img/date.png)
    background-position center
    background-repeat no-repeat
    font-size: 24px;
    font-family: "OpenSansSemibold", sans-serif;
    color: rgb(247, 248, 250);
    padding: 27px 0
    text-align: center;
    line-height: 1.3
h1
    font-size: 46px;
    font-family: "PlayfairDisplayBold", sans-serif;
    color: rgb(247, 248, 250);
    text-transform: uppercase;
    line-height: 1
    text-align: center
    text-shadow: 0px 0px 12.32px rgba(12, 9, 4, 0.26);
    margin-bottom: 0
h2
    font-size: 30px;
    font-family: "PlayfairDisplayBold", sans-serif;
    color: rgb(247, 248, 250);
    line-height: 1.3;
    text-align: center;
    text-shadow: 0px 0px 12.32px rgba(12, 9, 4, 0.26);
    margin 16px auto 17px
    width: 530px
#main_video_wrapper
    width: 463px
    margin 0
#roman
    position: absolute
    bottom: -45px;
    right: -135px;
    z-index: -1