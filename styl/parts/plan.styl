#plan
    padding 0 0 100px
#days_container
    max-width: 1366px
    margin 0 auto
.plan_subtitle
    margin 74px 0 -7px
    font-size: 31px;
    font-family: "PlayfairDisplayBlack", serif;
    color: rgb(123, 145, 58);
    line-height: 1
    text-align: center
    padding 0 10px
    span
        color #ff5a27
.day_pic
    height 478px
    background-position: center
    background-size: cover
    background-repeat no-repeat
    width: 50%
    float left
.day_descript
    width: 50%
    float left
    padding 52px 80px 0 45px
    h4
        font-size: 30px;
        font-family: "PlayfairDisplayBold", serif;
        color: rgb(123, 145, 58);
        line-height: 1.2;
        margin-bottom: 37px
        span
            color: #2d1b0c
.descript_list
    li
        padding-left: 43px
        list-style: none
        background-image url(../img/check.png)
        background-repeat no-repeat
        background-position 0px 2px
        font-size: 18px;
        font-family: "OpenSansRegular", sans-serif;
        color: rgb(45, 27, 12);
        line-height: 1;
        margin-bottom: 19px
#day_1
    .day_pic
        background-image url(../img/day_1.jpg)
#day_2
    .day_pic
        float: right
        background-image url(../img/day_2.jpg)
    .day_descript
        padding 92px 40px 0 103px
#day_3
    .day_pic
        background-image url(../img/day_3.jpg)